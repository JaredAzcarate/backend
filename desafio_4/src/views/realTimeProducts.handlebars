<section class="flex m-5 gap-5">
    <div class="bg-gray-100 p-5 w-96 rounded-lg">        
        <p class="text-xl font-bold mb-5">Esta es la lista de todos los productos:</p>
        <div id="listProducts"></div>

    </div>
    <div class="bg-gray-100 rounded-lg p-5">
        <div id="newProductForm" class="text-green-500 font-bold"></div>
        <p class="text-xl font-bold mb-5">Nuevo producto</p>
        <form class="grid grid-cols-6 gap-2">
            <input type="text" id="title" class="col-span-2 rounded-md p-2" placeholder="Title"/>
            <input type="text" id="description" class="col-span-2 rounded-md p-2" placeholder="Description"/>
            <input type="number" id="price" class="col-span-2 rounded-md p-2" placeholder="Price"/>
            <input type="text" id="thumbnail" class="col-span-4 rounded-md p-2" placeholder="Thumbnail"/>
            <input type="text" id="category" class="col-span-2 rounded-md p-2" placeholder="Category"/>
            <input type="text" id="code" class="col-span-3 rounded-md p-2" placeholder="Code"/>
            <input type="number" id="stock" class="col-span-3 rounded-md p-2" placeholder="Stock"/>
        </form>
        <button class="bg-black text-white p-2 rounded-md mt-4" id="buttonAdd">Agregar producto</button>
    </div>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>