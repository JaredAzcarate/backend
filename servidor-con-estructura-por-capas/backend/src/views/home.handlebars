<!-- Sección Jumbotron Modificada -->
<section class="bg-white">
    <div class="px-4 mx-auto max-w-screen-md text-center py-20">
        <!-- Título con color azul -->
        <h1 class="mb-8 text-4xl font-extrabold tracking-tight leading-none text-blue-500 md:text-5xl lg:text-6xl">
            Empanadas 100% Caseras
        </h1>
        <!-- Descripción opcional -->
        <p class="mb-8 text-lg font-normal text-gray-700 lg:text-xl sm:px-16 lg:px-20">
            Sabor auténtico en cada bocado. <strong>Entregas en 30 minutos.</strong>
        </p>

    </div>
</section>

<h1 class="text-2xl font-bold mb-6">Catálogo:</h1>
<div class="mb-20">
    <ul class="grid grid-cols-3 gap-10">
        {{#each data}}
        <li class="w-full col-span-1 bg-white shadow-lg border border-gray-100 rounded-lg p-5 flex items-center gap-6 hover:shadow-xl transition-all">
            <!-- Imagen del producto -->
            <div class="w-32 h-32 overflow-hidden rounded-lg">
                <img src="{{this.image}}" alt="Imagen no encontrada" class="object-cover w-full h-full">
            </div>
            
            <!-- Detalles del producto -->
            <div class="flex-1 space-y-3">
                <!-- Etiqueta de categoría -->
                <span class="text-xs font-semibold text-blue-500 uppercase">Categoría: {{this.category}}</span>

                <!-- Título y precio -->
                <div class="flex justify-between items-center">
                    <p class="text-xl font-bold">{{this.title}}</p>
                    <p class="text-lg font-semibold text-gray-700">{{this.price}}€ /unidad</p>
                </div>

                <!-- Descripción -->
                <p class="text-sm text-gray-600">{{this.description}}</p>

                <!-- Botón para ver el producto -->
                <a href="/api/products/{{this._id}}" class="inline-block mt-2">
                    <button type="button" class="text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-4 py-2">
                        Ver producto
                    </button>
                </a>
            </div>
        </li>
        {{/each}}
    </ul>
</div>
