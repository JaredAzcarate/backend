<section class="flex items-center justify-center py-20">
    <div class="bg-white shadow-md rounded-lg p-8 w-96">
            <h1 class="text-3xl font-bold text-center mb-5">Iniciar sesión</h1>

            <form class="flex flex-col gap-5" action="/api/auth/login" method="POST">
                <div class="flex flex-col gap-2">
                    <label for="email" class="font-medium">Email:</label>
                    <input class="border border-gray-300 p-2 rounded" type="email" name="email" required>
                </div>

                <div class="flex flex-col gap-2">
                    <label for="password" class="font-medium">Password:</label>
                    <input class="border border-gray-300 p-2 rounded" type="password" name="password" required>
                    <a href="/api/auth/update-password" class="text-blue-500 text-sm hover:underline">¿Has olvidado tu contraseña?</a>
                </div>

                <div class="flex flex-col gap-2 items-center">
                    <button class="bg-blue-600 text-white px-5 py-2 mt-5 w-full rounded hover:bg-blue-700 transition duration-200" type="submit">Login</button>
                    <p class="mt-3">- o -</p>
                    <a href="/api/auth/signup" class="text-blue-500 text-sm hover:underline">Crear cuenta</a>
                </div>
            </form>
    </div>
</section>