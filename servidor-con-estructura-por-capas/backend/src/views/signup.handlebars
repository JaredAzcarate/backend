<div class="flex items-center justify-center min-h-screen">
    <section class="flex items-center justify-center py-20">
        <div class="bg-white shadow-md rounded-lg p-8 w-96">
            <h1 class="text-3xl font-bold text-center mb-5">Regístrate</h1>

            <form class="flex flex-col gap-5" action="/api/auth/signup" method="POST">
                <div class="flex flex-col gap-2">
                    <label for="first_name" class="font-medium">Nombre:</label>
                    <input class="border border-gray-300 p-2 rounded" type="text" name="first_name" required>
                </div>

                <div class="flex flex-col gap-2">
                    <label for="last_name" class="font-medium">Apellido:</label>
                    <input class="border border-gray-300 p-2 rounded" type="text" name="last_name" required>
                </div>

                <div class="flex flex-col gap-2">
                    <label for="address" class="font-medium">Dirección:</label>
                    <input class="border border-gray-300 p-2 rounded" type="text" name="address" required>
                </div>

                <div class="flex flex-col gap-2">
                    <label for="age" class="font-medium">Edad:</label>
                    <input class="border border-gray-300 p-2 rounded" type="number" name="age" required>
                </div>

                <div class="flex flex-col gap-2">
                    <label for="email" class="font-medium">Email:</label>
                    <input class="border border-gray-300 p-2 rounded" type="email" name="email" required>
                </div>

                <div class="flex flex-col gap-2">
                    <label for="password" class="font-medium">Password:</label>
                    <input class="border border-gray-300 p-2 rounded" type="password" name="password" required>
                </div>

                <!-- Campo de selección para elegir el rol -->
                <div class="flex flex-col gap-2">
                    <label for="role" class="font-medium">Seleccionar Rol:</label>
                    <select class="border border-gray-300 p-2 rounded" name="role" required>
                        <option value="user" selected>Usuario</option>
                        <option value="admin">Administrador</option>
                    </select>
                </div>

                <div class="flex flex-col gap-2 items-center">
                    <button class="bg-blue-600 text-white px-5 py-2 mt-5 w-full rounded hover:bg-blue-700 transition duration-200" type="submit">Crear cuenta</button>
                    <p class="mt-3">- o -</p>
                    <a href="/api/auth/login" class="text-blue-500 text-sm hover:underline">Iniciar sesión</a>
                </div>
            </form>
        </div>
    </section>
</div>
