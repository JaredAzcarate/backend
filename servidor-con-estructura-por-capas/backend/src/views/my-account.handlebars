<div class="min-h-screen py-20">
  <h1 class="text-3xl font-bold mb-10 text-center">Perfil del Usuario</h1>

  <div class="container mx-auto px-4 max-w-xl bg-white p-8 rounded-lg shadow-lg">
    <!-- Nombre -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold text-gray-800">Nombre Completo</h2>
      <p class="text-gray-600">{{user.first_name}} {{user.lastName}}</p>
    </div>

    <!-- Dirección -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold text-gray-800">Dirección</h2>
      <p class="text-gray-600">{{user.address}}</p>
    </div>

    <!-- Correo Electrónico -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold text-gray-800">Correo Electrónico</h2>
      <p class="text-gray-600">{{user.email}}</p>
    </div>

    <!-- Edad -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold text-gray-800">Edad</h2>
      <p class="text-gray-600">{{user.age}}</p>
    </div>

    <!-- Rol de usuario -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold text-gray-800">Rol</h2>
      <p class="text-gray-600">{{user.role}}</p>
    </div>

    <!-- Botón de editar perfil -->
    <div class="flex justify-end mt-10">
      <a href="/api/users/profile/edit-account" class="bg-blue-600 text-white px-5 py-2 rounded hover:bg-blue-700 transition duration-200">
        Editar Perfil
      </a>
    </div>
  </div>
</div>
