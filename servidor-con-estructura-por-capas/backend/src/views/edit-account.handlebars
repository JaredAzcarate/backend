<div class="min-h-screen py-20">
  <h1 class="text-3xl font-bold mb-10 text-center">Editar Perfil</h1>

  <div class="container mx-auto px-4 max-w-xl">
    <form action="/api/users/profile/edit-account" method="POST" class="bg-white p-8 rounded-lg shadow-lg space-y-6">
      <!-- Nombre -->
      <div class="flex flex-col">
        <label for="first_name" class="font-medium">Nombre:</label>
        <input type="text" id="first_name" name="first_name" value="{{user.first_name}}" class="border border-gray-300 p-2 rounded" required>
      </div>

      <!-- Apellido -->
      <div class="flex flex-col">
        <label for="last_name" class="font-medium">Apellido:</label>
        <input type="text" id="last_name" name="last_name" value="{{user.last_name}}" class="border border-gray-300 p-2 rounded" required>
      </div>

      <!-- Dirección -->
      <div class="flex flex-col">
        <label for="address" class="font-medium">Dirección:</label>
        <input type="text" id="address" name="address" value="{{user.address}}" class="border border-gray-300 p-2 rounded" required>
      </div>

      <!-- Correo Electrónico -->
      <div class="flex flex-col">
        <label for="email" class="font-medium">Correo Electrónico:</label>
        <input type="email" id="email" name="email" value="{{user.email}}" class="border border-gray-300 p-2 rounded" required>
      </div>

      <!-- Edad -->
      <div class="flex flex-col">
        <label for="age" class="font-medium">Edad:</label>
        <input type="number" id="age" name="age" value="{{user.age}}" class="border border-gray-300 p-2 rounded" required>
      </div>

      <!-- Botón para enviar -->
      <div class="flex justify-end">
        <button type="submit" class="bg-blue-600 text-white px-5 py-2 rounded hover:bg-blue-700 transition duration-200">
          Actualizar Perfil
        </button>
      </div>
    </form>
  </div>
</div>
