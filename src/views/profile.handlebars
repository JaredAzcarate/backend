{{!-- Site title --}}
<section class="h-52 flex items-center justify-between">
    <p class="text-5xl font-bold mb-5">Hola {{name}}!</p>

    {{#if role}}
        <div class="flex flex-col">
            <p class="mb-5">Herramientas de Administrador</p>
            <div>
                <a class="bg-black text-white px-5 py-2 w-full text-center" href="/api/products">Gestionar productos</a>
                <a class="bg-black text-white px-5 py-2 w-full text-center" href="/api/session/register/admin">Agregar administrador</a>
            </div>
        </div>
    {{else}}

    {{/if}}
</section>

<div>
    <p class="mb-5">Tus datos:</p>
    <p><span class="font-bold">Nombre de usuario: </span>{{name}}</p>
    <p><span class="font-bold">Nombre y apellido: </span>{{name}} {{lastname}}</p>
    <p><span class="font-bold">Role: </span>
        {{#if role}}
            Administrado
        {{else}}
            usuario
        {{/if}}
    </p>
</div>

<form class="max-w-[350px] flex flex-col gap-5" action="/api/session/logout" method="POST">
    <button class="bg-black text-white px-5 py-2 mt-5 w-full" type="submit">Logout</button>
</form>